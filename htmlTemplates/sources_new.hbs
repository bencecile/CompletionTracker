<html>
    <head>
        {{> html_head}}
    </head>
    <body>
        {{> header}}

        <!-- Center the main form on larger screens -->
        <div class="container">
            <div class="row justify-content-center">
                <h2>{{lang.source_new}}</h2>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-6 col-12">
                    <form class="container" method="POST" action="/sources/new">
                        <div class="form-group">
                            <label for="name">{{lang.name}}</label>
                            <input class="form-control" type="text" id="name">
                        </div>
                        <div class="row">
                            <div class="col justify-content-center">
                                <input class="btn btn-primary" type="submit" value="{{lang.save}}">
                            </div>
                            <div class="col justify-content-center">
                                <a class="btn btn-secondary" href="/sources">
                                    {{lang.cancel}}
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {{> footer}}
    </body>
</html>
